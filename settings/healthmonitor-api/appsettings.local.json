{
    "HealthCheckHostedService": {
        "Name": "healthmonitor-api",
        "Enabled": true,
        "Interval": 5,
        "CacheDuration": 60,
        "Checks": [
            {
                "Name": "shoppingcart-api",
                "Type": "caching",
                "Required": false,
                "Value": "http://shoppingcart-api:5000/api/health",
                "Interval": 30,
                "Timeout": 5
            },          
            {
                "Name": "shoppingcart-web",
                "Type": "caching",
                "Required": false,
                "Value": "http://shoppingcart-web:8080/health",
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "policyserver",
                "Type": "caching",
                "Required": false,
                "Value": "http://policyserver:5001/health",
                "Interval": 30,
                "Timeout": 5
            },
            {
                "Name": "identityserver",
                "Type": "caching",
                "Required": false,
                "Value": "http://policyserver:5001/api/health",
                "Interval": 30,
                "Timeout": 5
            },
        ]
    },
    "Seq": {
        "ServerUrl": "http://seq"
    }
}
